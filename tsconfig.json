{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "react-resizable-panels": ["./src/shared/resizable-panels/src"],
      "shadcn-blocks/*": ["./src/shared/shadcn/components/*"],
      "shadcn/*": ["./src/shared/shadcn/components/ui/*"],
      "@database": ["./database.ts"],
      "@/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017"
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
